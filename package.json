{
  "name": "2dpunch",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:api": "npm --workspace @2dpunch/api run dev",
    "dev:api:supabase": "DATA_PROVIDER=supabase npm --workspace @2dpunch/api run dev",
    "dev:mobile": "npm --workspace mobile run start",
    "dev:web": "npm --workspace @2dpunch/web run dev",
    "mobile:build:preview:ios": "npm --workspace mobile run eas:build:preview:ios",
    "mobile:build:preview:android": "npm --workspace mobile run eas:build:preview:android",
    "mobile:build:prod:ios": "npm --workspace mobile run eas:build:prod:ios",
    "mobile:build:prod:android": "npm --workspace mobile run eas:build:prod:android",
    "build": "npm-run-all build:api build:web",
    "build:api": "npm --workspace @2dpunch/api run build",
    "build:web": "npm --workspace @2dpunch/web run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}